# ==== BASE DE DATOS PostgreSQL ====
POSTGRES_DB=db_grupo17sa
POSTGRES_USER=grupo17sa
POSTGRES_PASSWORD=grup017grup017*
DB_HOST=db
DB_PORT=5432

# ==== CORREO POP3 (Recibir emails) ====
MAIL_POP3_HOST=mail.tecnoweb.org.bo
MAIL_POP3_PORT=110
MAIL_POP3_USER=grupo17sa
MAIL_POP3_PASSWORD=grup017grup017*

# ==== CORREO SMTP (Enviar respuestas) ====
# Opciones: MAILERSEND (HTTP API), GMAIL (puerto 587) o SOCKET (puerto 25)
# RECOMENDADO: MAILERSEND (funciona siempre, puertos SMTP bloqueados en VPS)
MAIL_SENDER_TYPE=MAILERSEND

# Gmail SMTP (funciona si puerto 587 no está bloqueado)
MAIL_SMTP_USER=tu-correo@gmail.com
MAIL_SMTP_PASSWORD=xxxx-xxxx-xxxx-xxxx

# MailerSend API (RECOMENDADO - usa puerto 443 HTTP)
# Obtener en: https://www.mailersend.com/
# Gratis: 12,000 correos/mes
MAILERSEND_API_TOKEN=mlsn.xxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
MAILERSEND_FROM_EMAIL=no-reply@trial-xxxxx.mlsender.net
MAILERSEND_FROM_NAME=Grupo 17SA

# ==== SISTEMA ====
MAIL_CHECK_INTERVAL=5000
MAIL_MAX_PROCESS=10
